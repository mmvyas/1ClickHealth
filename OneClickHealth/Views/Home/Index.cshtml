@{
    ViewBag.Title = "Home Page";
}

<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
<div class="container">
    <div id="myCarousel" class="carousel slide" data-ride="carousel" style="margin-left: -20px">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <img src="~/Content/one.jpeg" class="carousel" alt="first slide" style="width:1300px; height: 430px">
                <div class="image-text-bottom">Join the Race</div>
                <div class="image-text-top"><h1>Manage your Fitness with us</h1></div>
            </div>

            <div class="item">
                <img src="~/Content/two.jpeg" class="carousel" alt="second slide" style="width:1300px; height:430px">
                <div class="image-text-bottom">Keep Challenging yourself</div>
                <div class="image-text-top"><h1>Let us mantain your Health</h1></div>
            </div>

            <div class="item">
                <img src="~/Content/three.jpeg" class="carousel" alt="third slide" style="width:1300px; height:430px">
                <div class="image-text-bottom">Health is Wealth</div>
                <div class="image-text-top"><h1>We care for you</h1></div>
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <style>
        .image-text-bottom {
            position: absolute;
            bottom: 8px;
            right: 16px;
            color: white;
            font-family: Garamond;
            font-weight: lighter;
            font-size: large;
        }

        .image-text-top {
            position: absolute;
            top: 8px;
            left: 16px;
            color: papayawhip;
            font-family: Garamond;
            font-size: 20rem;
        }

        .carousel-inner {
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            overflow: hidden;
            display: block;
            max-width: 100%;
        }
    </style>
</div>

<div class="row">
    <div class="col-md-4">
        <h2 style="text-align:center">Plan your Workout</h2>
        <p style="text-align:justify">
            We give you a huge database of exercises to select from, exercises that will help you build your
            physique. Your own personal exercise database that makes fitness fun and helps you stay motivated.
        </p>
        @using Microsoft.AspNet.Identity
        @if (Request.IsAuthenticated)
        {
            <p><a class="btn btn-default" style="margin-left: 120px" href="Exercises">Learn more &raquo;</a></p>
        }
        else
        {
            <p><a class="btn btn-default" style="margin-left: 120px" href="Account/Login">Learn more &raquo;</a></p>
        }
    </div>
    <div class="col-md-4">
        <h2 style="text-align:center">Manage your Progress</h2>
        <p style="text-align:justify">
            Millions of people have lost weight with 1ClickHealth's FREE calorie counter. We believe fitness
            should be accessible to everyone, everywhere, regardless of income or access to a gym.
        </p>
        @if (Request.IsAuthenticated)
        {
            <p><a class="btn btn-default" style="margin-left: 120px" href="ProgressDiaries">Learn more &raquo;</a></p>
        }
        else
        {
            <p><a class="btn btn-default" style="margin-left: 120px" href="Account/Login">Learn more &raquo;</a></p>
        }
    </div>
    <div class="col-md-4">
        <h2 style="text-align:center">Gym near you</h2>
        <p style="text-align:justify">
            You can easily get distracted after a few days of exercise, you can visit these Gyms near you to
            get more fit and healthy.
        </p>
        @if (Request.IsAuthenticated)
        {
            <p><a class="btn btn-default" style="margin-left: 120px" href="Locations/Index">Learn more &raquo;</a></p>
        }
        else
        {
            <p><a class="btn btn-default" style="margin-left: 120px" href="Account/Login">Learn more &raquo;</a></p>
        }
    </div>
    
</div>