<h2 style="color: #006cab">See your Progress here</h2> <br />

@model OneClickHealth.Models.HealthModel1

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" style="margin-top: 40px">
        <h4>Please Select your Start date and End Date to see calories burnt</h4>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group" style="margin-top: 20px">
            @Html.LabelFor(model => model.Date1, "Start Date", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Date1", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Date1, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="margin-top: 20px">
            @Html.LabelFor(model => model.Date2, "End Date", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Date2", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Date2, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Search" class="btn btn-default" />
            </div>
        </div>
    </div>
}




